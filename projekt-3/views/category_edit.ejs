<%- include("head.partial.ejs") %>
<main>
  <nav>
    <a href="/kitties">Powrót do listy kategorii</a>
  </nav>
  <h1><%= title %></h1>
  <div>
    <% if (locals.errors != null) {%>
    <ul id="errors">
      <% errors.forEach(function(error){ %>
      <li><%= error %></li>
      <% }) %>
    </ul>
    <% } %>
    <%- include("forms/edit_category.ejs") %>
    <% if (locals.category.kitties && locals.category.kitties.length > 0) { %>
      <ul id="pics">
        <% category.kitties.forEach(function(kitty){ %>
        <li>
          <%- include("forms/edit_kitty.ejs", {kitty, category}) %>
          <form class="pics-action" action="/kitties/delete/<%= category.id %>/<%= kitty.id %>" method="POST">
            <button>Usuń</button>
          </form>
        </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>W tej kategorii nie ma żadnych fiszek. Dodaj nowe poniżej.</p>
    <% } %>
  </div>
  <a href="/kitties/<%= category.id %>">Powrót</a>
</main>

<%- include("foot.partial.ejs") %>